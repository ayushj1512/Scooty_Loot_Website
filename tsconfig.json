{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "vue",
      "nuxt"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": false,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "include": [
    "nuxt.config.ts",
    "**/*.ts",
    "**/*.vue",
    "shims-vue.d.ts" // Make sure this file is included here
  ]
}